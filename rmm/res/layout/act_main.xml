<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_home" >

    <org.dragon.rmm.ui.widget.MenuViewItem
        android:id="@+id/menu_launcher_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/menu_1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dip"
            android:layout_marginTop="30dip"
            android:drawableTop="@drawable/icon_1"
            android:gravity="center"
            android:text="钟点工"
            android:textColor="@android:color/white" />
    </org.dragon.rmm.ui.widget.MenuViewItem>

    <org.dragon.rmm.ui.widget.MenuViewItem
        android:id="@+id/menu_launcher_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/menu_2" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dip"
            android:layout_marginTop="180dip"
            android:drawableTop="@drawable/icon_2"
            android:gravity="center"
            android:text="我的预约"
            android:textColor="@android:color/white" />
    </org.dragon.rmm.ui.widget.MenuViewItem>

    <org.dragon.rmm.ui.widget.MenuViewItem
        android:id="@+id/menu_launcher_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/menu_3" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dip"
            android:layout_marginTop="240dip"
            android:drawableTop="@drawable/icon_3"
            android:gravity="center"
            android:text="干洗"
            android:textColor="@android:color/white" />
    </org.dragon.rmm.ui.widget.MenuViewItem>

    <org.dragon.rmm.ui.widget.MenuViewItem
        android:id="@+id/menu_launcher_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/menu_4" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="80dip"
            android:drawableTop="@drawable/icon_4"
            android:gravity="center"
            android:text="保洁"
            android:textColor="@android:color/white" />
    </org.dragon.rmm.ui.widget.MenuViewItem>

    <org.dragon.rmm.ui.widget.MenuViewItem
        android:id="@+id/menu_launcher_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/menu_5" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/icon_5"
            android:textColor="@android:color/white" />
    </org.dragon.rmm.ui.widget.MenuViewItem>

</FrameLayout>