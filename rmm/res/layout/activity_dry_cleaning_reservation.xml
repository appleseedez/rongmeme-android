<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_full_screen"
    tools:context="${packageName}.${activityClass}" >

	<include android:id="@+id/page_header_layout" layout="@layout/activity_navigator" />
	
	<ListView
	    android:id="@+id/manifest"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/page_header_layout"
        android:divider="@null"/>
	
	<LinearLayout
	    android:id="@+id/contact_box"
	    android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/backgroud_white"
        android:layout_below="@id/manifest">
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp">
		    <ImageView
		        android:layout_width="20dp"
		        android:layout_height="30dp"
		        android:layout_marginLeft="20dp"
		        android:src="@drawable/icon_map_pin"
				android:contentDescription="@string/image_content_description"/>
		    <EditText
		        android:id="@+id/address"
		        android:layout_width="match_parent"
		        android:layout_height="35dp"
		        android:layout_marginLeft="20dp"
		        android:inputType="text"
       			android:textSize="20sp"
        		android:textColor="@android:color/white"
        		android:background="@android:color/transparent"/>
		</LinearLayout>
		<LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp">
		    <ImageView
		        android:layout_width="20dp"
		        android:layout_height="30dp"
		        android:layout_marginLeft="20dp"
		        android:src="@drawable/icon_contact"
		        android:contentDescription="@string/image_content_description"/>
		    <EditText
		        android:id="@+id/telephone"
		        android:layout_width="match_parent"
		        android:layout_height="35dp"
		        android:layout_marginLeft="20dp"
       			android:textSize="20sp"
        		android:textColor="@android:color/white"
        		android:background="@android:color/transparent"
		        android:inputType="phone"/>
		</LinearLayout>
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/disclaimer_box"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/contact_box">
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center"
	        android:text="@string/dry_cleaning_reserve_disclaimer_title"
	        android:textSize="20sp"
        	android:textColor="@android:color/white"/>
	    <TextView
	        android:id="@+id/disclaimer"
	        android:layout_width="match_parent"
	        android:layout_height="120dp"
	        android:gravity="center"
	        android:scrollbars="vertical"
	        android:scrollbarStyle="insideInset"
	        android:text="@string/dry_cleaning_reserve_disclaimer"
	        android:textSize="16sp"
        	android:textColor="@android:color/white"/>
	    <CheckBox
	        android:id="@+id/disclaimer_accept"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/dry_cleaning_reserve_disclaimer_accept"  
        	android:textSize="16sp"
        	android:textColor="@android:color/white"/>
	</LinearLayout>
	
	<TextView
	    style="@style/button"
	    android:id="@+id/reserve_confirmed"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/dry_cleaning_reserve_send_reservation" />
    
</RelativeLayout>
