<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ssi_top_navigation_bar"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/small_category_bg_n"
     >

    <TextView
        android:id="@+id/ssi_small_category_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:text="@string/ssi_small_category_name_title_text"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/ssi_small_category_checkbox_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:contentDescription="@string/ssi_small_category_checkbox_imageButton_desc"
        android:src="@drawable/item_checked" />
   <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@null" >
    </View>
</RelativeLayout>